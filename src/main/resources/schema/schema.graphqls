type Query {

    expenses : [Expense]

}


type Expense {
    id: ID
    remarks: String
    amount: Int
    isIncome: Boolean
}

type Mutation {
    createExpense(data: ExpenseInput) : Expense
    deleteExpense(id: ID) : Boolean
    updateExpense(expense: UpdatedExpense): Expense
}

input UpdatedExpense {
    id: ID
    remarks: String
    amount: Int
    isIncome: Boolean
}

input ExpenseInput {
    remarks: String
    amount: Int
    isIncome: Boolean
}